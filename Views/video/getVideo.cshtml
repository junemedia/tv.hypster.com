                                    });
                                </script>
                            </div>


                            <div onclick="window.location='http://@System.Configuration.ConfigurationManager.AppSettings["newsHostName"]';" style=" float:left; width:260px; height:90px; margin-left:15px; background-color:#858c90; border:3px solid #858c90; border-radius:2px; line-height:90px; text-align:center; font-size:27px; cursor:pointer;">
                                Hypster News
                            </div>

                        </div>


